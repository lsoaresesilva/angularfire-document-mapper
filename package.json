{
  "name": "firema",
  "version": "0.0.1",
  "description": "Firestore Mapper is a library designed to reduce the Firestore's boilplate code used to manipulate the database. Every operation on database with Firebase API is a tedious and repetitive task. The aim of this project is to ease this process.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "babel index.js firebaseConfig.js firestoreDocument.js -d dist",
    "start": "npm run build && node dist/index.js",
    "test": " npm run build && babel tests/index_test.js tests/usuario.js -d dist && node dist/index_test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lsoaresesilva/angularfire-document-mapper.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lsoaresesilva/angularfire-document-mapper/issues"
  },
  "homepage": "https://github.com/lsoaresesilva/angularfire-document-mapper#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "firebase": "^9.11.0",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.3",
    "@babel/preset-env": "^7.19.3"
  }
}
